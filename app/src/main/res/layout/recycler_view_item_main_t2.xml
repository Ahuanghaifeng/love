<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?android:attr/selectableItemBackground">


    <com.video.player.lib.view.VideoRoundImageView
        android:id="@+id/item_main_t2_iv_icon"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_main_t2_tv_name"
        app:layout_constraintTop_toTopOf="parent"
        app:video_borderRadius="8dp"
        app:video_type="video_round" />


    <TextView
        android:id="@+id/item_main_t2_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文"
        android:textColor="@color/black_0a0a0a"
        android:textSize="@dimen/size_16"
        app:layout_constraintLeft_toRightOf="@id/item_main_t2_iv_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_main_t2_iv_icon" />

    <TextView
        android:id="@+id/tv_cheats_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#ff8e8e8e"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_main_t2_iv_icon"
        app:layout_constraintLeft_toLeftOf="@id/item_main_t2_tv_name" />


    <ImageView
        android:id="@+id/item_main_t2_iv_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@mipmap/main_icon_arr_rig_gray"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>